<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body style="
display: flex;
justify-content: center;
align-items: center;
">
  <%- include('includes/navigation.ejs') %>
      
      <div style="background-color: white;
      border-radius: 10px;
      margin-top: 20px;
      padding: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      ">  
        <form class="login-form" action="/login" method="POST">
          <h2 style="font-weight: bold;" >LOGIN</h2>

          <% if (errMessage != "") { %>
            <div class="user-message user-message--error"><%= errMessage %></div>
          <% } %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-control" style="padding: 10px;">
              <label for="email">E-mail</label>
              <input style="padding: 7px;" type="email" name="email" id="email">
          </div>
          <div class="form-control" style="padding: 10px;">
              <label for="password">Password</label>
              <input style="padding: 7px;" type="password" name="password" id="password">
          </div>
          <button type="submit" class="btn btn-success">Login</button>
        </form>
      </div>
<%- include('includes/end.ejs') %>



