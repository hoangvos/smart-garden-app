<%- include('includes/head.ejs') %>
  <style>
    .time-form-frame{
      display: flex;
      gap: 70px;
    } 
    @media (max-width: 600px) {
      .time-form-frame {
          display: block;
          justify-items: center;
      }
    }
    .frame-list {
      list-style: none;
      padding: 0;
      border: 1px solid #3498db;
      border-radius: 10px;
      background-color: #f1f1f1;
    }
    
    .frame-list-item {
      padding: 10px;
      border-bottom: 1px solid #3498db;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #fff;
      color: #3498db;
    }
    
    .frame-list-item:last-child {
      border-bottom: none;
    }
    
    .frame-list-item span {
      font-weight: bold;
    }
    .time-input-container {
      display: flex;
      align-items: center;
      max-width: 500px;
      max-height: 100px;
      border-style: solid;
      border-width: 4px;
      border-color: green;
      border-radius: 7px;
      padding: 5px;
      background-color: rgb(92, 255, 92);
    }

    .input-label {
      margin-right: 10px;
      font-size: 30px;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      font-weight: bold;
    }

    .time-input {
      width: 100%;
      background: transparent;
      border: none;
      outline: none;
      font-size: 30px;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      font-weight: bold;
    }

    .custom-calendar-icon {
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 50%;
      cursor: pointer;
      font-size: 16px;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Định dạng biểu tượng lịch */
    .custom-calendar-icon::before {
      content: "\1F4C5"; /* Unicode character for a calendar icon */
    }
  </style>
</head>
